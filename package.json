{
  "name": "next-chakra-starter",
  "private": true,
  "version": "0.1.0",
  "description": "Next.js + Chakra UI + TypeScript starter template",
  "author": "Muhammad Akmal Hisyam",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && yarn format",
    "format": "prettier --write src",
    "type-check": "tsc --noEmit",
    "release": "standard-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.4.1",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@fontsource/open-sans": "^4.5.13",
    "framer-motion": "^7.6.12",
    "next": "13.0.5",
    "next-seo": "^5.14.1",
    "next-sitemap": "^3.1.32",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-next": "13.0.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "standard-version": "^9.5.0",
    "typescript": "4.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akmalhisyammm/next-chakra-starter"
  },
  "bugs": {
    "url": "https://github.com/akmalhisyammm/next-chakra-starter/issues"
  }
}
